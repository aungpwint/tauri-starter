{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "tauri-starter",
    "version": "0.1.0",
    "identifier": "com.tauri-starter.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "tauri-starter",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "createUpdaterArtifacts": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "updater": {
            "active": true,
            "dialog": {
                "title": "Update Available",
                "description": "A new version of the app is available. Would you like to update?",
                "okLabel": "Update",
                "cancelLabel": "Later"
            },
            "endpoints": [
                "https://github.com/aungpwint/tauri-starter/releases/latest/download/latest.json"
            ],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBMUI1NjFCRTJBNzdDRkEKUldUNmZLZmlHMVliNnM2MnU5aFRnTmxmV1puUXFGUStyUDVvQnVpa3oyWjgvYWlpOVpUK2hnSzIK",
            "windows": {
                "installMode": "passive"
            }
        }
    }
}